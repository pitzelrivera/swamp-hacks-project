//list of chance cards
def __init__(self, chance_name, chance_definition, is_in_jail, money_change) :
        self.name = chance_name
        self.definition = chance_definition
        self.jail = is_in_jail
        self.money = money_change

Chance("Advance to Go", "Collect $200 Dollars", False, 200)
Chance("Go to Jail", "Go Directly to Jail, Do not collect $200", True, 0)
Chance("Get out of Jail Free", "", False, 0)
Chance("Tax", "Pay poor tax of $15", False, -15)
Chance("Chairman of the board", "Pay the other player $50", False, -50)
